<h1>Wish Detail</h1>

<ul>
  <strong><%= @wish.user_name %>:</strong>
  <%= @wish.content %>
  作成日: <%= @wish.datetime %>
  いいね数: <%= @wish.likes_count %>
  叶った？: <%= @wish.fulfilled ? 'Yes' : 'No' %>
  リマインダー日: <%= @wish.remind_at %>
  <%= link_to 'Edit', edit_wish_path(@wish) %>
  <%= link_to 'Back to top', wishes_path %> |
  <%= link_to 'Delete', @wish, method: :delete, data: { confirm: 'Are you sure?' } %>
</ul>
