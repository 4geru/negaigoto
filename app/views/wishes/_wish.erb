<li>
  <strong><%= wish.user_name %>:</strong>
  <%= wish.content %>
  <br>
  Likes: <%= wish.likes_count %>
  <br>
  Fulfilled: <%= wish.fulfilled ? 'Yes' : 'No' %>
  <br>
  <%= link_to 'Show', wish_path(wish) %> |
  <%= link_to 'Edit', edit_wish_path(wish) %> |
  <%= link_to 'Delete', wish_path(wish), method: :delete, data: { confirm: 'Are you sure?' } %>
</li>